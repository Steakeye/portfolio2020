{
  "name": "steakeye-2020",
  "description": "Steakeye portfolio site",
  "version": "0.0.1",
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "lint": "npm run stylelint && npm run eslint",
    "validate": "npm run lint && npm run svelte:check",
    "eslint": "eslint --cache --ext .js,.ts, src",
    "eslint:dump": "eslint --print-config ./.eslintrc.json",
    "eslint:fix": "npm run eslint --- --fix",
    "fix": "npm run prettier && npm run eslint:fix && npm run stylelint:fix && npm run svelte:check",
    "format-and-fix": "npm run prettier && npm run eslint --fix",
    "prettier": "prettier --write src",
    "prettier:root": "npm run prettier:root:json && npm run prettier:root:js",
    "prettier:root:js": "prettier --write ./*.js",
    "prettier:root:json": "prettier --write ./*.json",
    "stylelint": "npm run stylelint:css && npm run stylelint:scss",
    "stylelint:fix": "npm run stylelint:css:fix && npm run stylelint:scss:fix",
    "stylelint:css": "stylelint src/**/*.css --syntax css --allow-empty-input",
    "stylelint:scss": "stylelint src/**/*.scss --syntax scss --allow-empty-input",
    "stylelint:css:fix": "npm run stylelint:css --fix",
    "stylelint:scss:fix": "npm run stylelint:scss --fix",
    "svelte:check": "svelte-check"
  },
  "dependencies": {
    "@coreui/icons": "^2.0.0-beta.5",
    "compression": "^1.7.1",
    "custom-event": "^1.0.1",
    "destyle.css": "^1.0.15",
    "devtools-detect": "^3.0.1",
    "phaser": "^3.24.1",
    "polka": "next",
    "ramda": "^0.27.1",
    "sirv": "^1.0.0",
    "svelte-phaser": "0.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@csstools/postcss-sass": "github:steakeye/postcss-sass",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "@rollup/plugin-typescript": "^4.0.0",
    "@rollup/plugin-url": "^5.0.1",
    "@tsconfig/svelte": "^1.0.0",
    "@types/polka": "^0.5.1",
    "@types/ramda": "^0.27.19",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "autoprefixer": "^9.8.6",
    "cypress": "^5.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-import-resolver-typescript": "^2.2.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.3.0",
    "jpeg-js": ">=0.4.0",
    "lint-staged": "^10.2.11",
    "node-sass-json-importer": "^4.3.0",
    "node-sass-tilde-importer": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "prettier-plugin-svelte": "^1.1.0",
    "rollup": "^2.3.4",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-favicons": "github:steakeye/rollup-plugin-favicons",
    "rollup-plugin-postcss": "^3.1.5",
    "rollup-plugin-root-import": "^1.0.0",
    "rollup-plugin-scss": "^2.6.0",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "sapper": "^0.28.9",
    "sass": "^1.26.10",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "svelte": "^3.17.3",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "lint-staged": {
    "src/**/*.(js|ts|json)": [
      "npm run format-and-fix",
      "git add"
    ],
    "src/**/*.(svelte)": [
      "npm run svelte:check"
    ],
    "src/**/*.scss": [
      "npm run stylelint:scss:fix",
      "git add"
    ],
    "src/**/*.css": [
      "npm run stylelint:css:fix",
      "git add"
    ],
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
