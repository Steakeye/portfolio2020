      "./node_modules/phaser/types",
      "typings"
    ],
    "lib": ["ES2015", "DOM", "WebWorker"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
